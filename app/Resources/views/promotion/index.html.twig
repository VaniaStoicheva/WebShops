{% extends 'base.html.twig' %}

{% block body %}

<div class="col-md-8 col-md-offset-1">


    <h1>Promotion list by categories</h1>

    <div class="table-respovsive">
        <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Percent</th>
                <th>Start-Date</th>
                <th>End-Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td><a href="{{ path('promotion_show', { 'id': promotion.id }) }}">{{ promotion.id }}</a></td>
                <td><a href="{{ path('promotion_show',{'id': promotion.id}) }}" >{{ promotion.category }}</a></td>
                <td>{{ promotion.percent }}</td>
                <td>{% if promotion.startDate %}{{ promotion.startDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if promotion.endDate %}{{ promotion.endDate|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <a href="{{ path('promotion_show', { 'id': promotion.id }) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}" class="btn btn-primary btn-sm">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% if is_granted('ROLE_EDITOR') %}
    <a href="{{ path('promotion_new') }}" class="btn btn-primary btn-sm">Add new Promotion</a>
{% endif %}
{% endblock %}
