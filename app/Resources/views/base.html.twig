<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome to web bookstore!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

</head>

<body id="{% block body_id %}{% endblock %}">



{% block header %}
    <header>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a href="{{ path('homepage') }}" class="navbar-brand">BOOKSTORE</a>

                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">

                    <ul class="nav nav-tabs">
                        <li class="active"><a href="{{ path('homepage') }}" data-toggle="tab" aria-expanded="false">Home</a></li>
                        <li class="active"><a href="{{ path('user_index') }}" data-toggle="tab" aria-expanded="false">Profile</a></li>
                        <li class="active"><a href="{{ path('category_index') }}" data-toggle="tab" aria-expanded="true">Categories</a></li>

                        <li class="active"><a href="{{ path('product_index') }}" data-toggle="tab" aria-expanded="false">Products</a></li>
                        <li class="active"><a href="{{ path('promotion_index') }}" data-toggle="tab" aria-expanded="false">Promotions</a></li>

                </div>
            </div>

            <ul class="nav navbar-nav navbar-right">
                {#{% if app.user %}#}


                {#{% else %}#}
                <li>
                    <a href="{{ path('user_register') }}">
                        REGISTER
                    </a>
                </li>
                <li>
                    <a href="{{ path('user_login') }}">
                        LOGIN
                    </a>
                </li>
                {#{% endif %}#}
                <li>
                    <a href="{{ path('user_logout') }}">
                        Logout
                    </a>
                </li>
            </ul>
        </div>
        </div>
        </div>
    </header>
{% endblock %}

<div class="container body-container">
    {% for message in app.session.flashBag.get('info') %}
        <div class="alert alert-info">
            <strong>{{ message }}</strong>
        </div>
    {% endfor %}
    {% for message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            <strong>{{ message }}</strong>
        </div>
    {% endfor %}
    {% for message in app.session.flashBag.get('delete') %}
        <div class="alert alert-danger">
            <h1>{{ message }}</h1>
        </div>
    {% endfor %}
    {% block body %}



        <div class="row">
            <div id="main" class="col-sm-9">
                {% block main %}

                {% endblock %}
            </div>
        </div>
    {% endblock %}
</div>

{% block footer %}
    <footer>
        <div class="container modal-footer">
            <p>&copy; 2017 - Web bookstore</p>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-2.2.4.min.js') }}"></script>
    <script src="{{ asset('js/moment.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
{% endblock %}

</body>



</html>
