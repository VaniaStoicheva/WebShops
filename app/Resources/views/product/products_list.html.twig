{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-md-6 col-md-offset-2">

        <h1>Products list by category : <strong>{{ category.name }}</strong></h1>

        <div class="table-respovsive">
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>Product id</th>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Price</th>
                    <th>Image</th>
                    <th>Product Quantity</th>

                </tr>
                </thead>
                <tbody>
                {% for product in products  %}
                    <tr>

                        <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.price }}</td>
                        <td><img src="/images/product/{{ product.image }}" style="width: 50px;"/></td>
                        <td>{{ product.quantity }}</td>

                    </tr>
                {% endfor %}


                </tbody>
            </table>
        </div>
    </div>
    <a href="{{ path('category_new') }}" class="btn btn-primary btn-sm">Add new category</a>


{% endblock %}

