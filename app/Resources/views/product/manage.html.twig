{% extends 'base.html.twig' %}

{% block body %}


<div class="container">
    <div class="col-md-8 col-md-offset-1">
        <h1>Products list</h1>
        <div class="table-respovsive">
            <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Images</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for products in product %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': products.id }) }}">{{ products.id }}</a></td>
                <td>{{ products.name }}</td>
                <td>{{ products.description }}</td>
                <td>{{ products.price }}</td>
                <td><img src="/images/product/{{ products.image }}" style="width: 50px;"/></td>
                <td>
                    <a href="{{ path('product_show', { 'id': products.id }) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('admin_product_delete', { 'id': products.id }) }}" class="btn btn-danger btn-sm">delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>

            <a href="{{ path('product_new') }}" class="btn btn-primary btn-sm">Create a new product</a>


</div>
{% endblock %}


