{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-6 col-md-offset-2">

    <h1>Category</h1>

    <div class="table-respovsive">
        <table class="table table-striped table-hover ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{% if category.published %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary btn-sm">Edit</a>

    {{ form_start(delete_form) }}
    <input type="submit" value="Delete" class="btn btn-danger btn-sm">
    {{ form_end(delete_form) }}
</div>
</div>
    <a href="{{ path('category_new') }}" class="btn btn-primary btn-sm">Add new category</a>
    <a href="{{ path('category_index') }}" class="btn btn-primary btn-sm">Back to the list</a>

{% endblock %}
