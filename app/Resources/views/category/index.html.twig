{% extends 'base.html.twig' %}

{% block body %}

<div class="col-md-6 col-md-offset-2">

    <h1>Categories list</h1>

    <div class="table-respovsive">
        <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Published</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td><a href="{{ path('category_products', { 'id': category.id }) }}">{{ category.name }}</a></td>
                <td>{% if category.published %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary btn-sm">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% if is_granted('ROLE_EDITOR') %}
            <a href="{{ path('category_new') }}" class="btn btn-primary btn-sm">Add new category</a>
{% endif %}


{% endblock %}
